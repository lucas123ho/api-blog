{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "authors",
  "info": {
    "name": "author"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "unique": false,
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "posts": {
      "via": "author",
      "collection": "post 2"
    }
  }
}
